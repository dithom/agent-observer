{
  "name": "agent-observer-vscode",
  "displayName": "Agent Observer",
  "description": "Real-time monitoring of AI agents across projects and VS Code windows",
  "version": "0.3.0",
  "publisher": "dithom",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dithom/agent-observer"
  },
  "bugs": {
    "url": "https://github.com/dithom/agent-observer/issues"
  },
  "homepage": "https://github.com/dithom/agent-observer#readme",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "keywords": ["ai", "agent", "monitor", "claude", "status"],
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agent-observer",
          "title": "Agent Observer",
          "icon": "$(eye)"
        }
      ]
    },
    "views": {
      "agent-observer": [
        {
          "id": "agentObserver.agents",
          "name": "Agents",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "agentObserver.enableGroupByProject",
        "title": "✓ Group by Project"
      },
      {
        "command": "agentObserver.disableGroupByProject",
        "title": "Group by Project"
      },
      {
        "command": "agentObserver.enableMoveInactiveToTop",
        "title": "✓ Move Inactive to Top"
      },
      {
        "command": "agentObserver.disableMoveInactiveToTop",
        "title": "Move Inactive to Top"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "agentObserver.enableGroupByProject",
          "when": "view == agentObserver.agents && config.agentObserver.groupByProject",
          "group": "1_display"
        },
        {
          "command": "agentObserver.disableGroupByProject",
          "when": "view == agentObserver.agents && !config.agentObserver.groupByProject",
          "group": "1_display"
        },
        {
          "command": "agentObserver.enableMoveInactiveToTop",
          "when": "view == agentObserver.agents && config.agentObserver.moveInactiveToTop",
          "group": "1_display"
        },
        {
          "command": "agentObserver.disableMoveInactiveToTop",
          "when": "view == agentObserver.agents && !config.agentObserver.moveInactiveToTop",
          "group": "1_display"
        }
      ],
      "commandPalette": [
        { "command": "agentObserver.enableGroupByProject", "when": "false" },
        { "command": "agentObserver.disableGroupByProject", "when": "false" },
        { "command": "agentObserver.enableMoveInactiveToTop", "when": "false" },
        { "command": "agentObserver.disableMoveInactiveToTop", "when": "false" }
      ]
    },
    "configuration": {
      "title": "Agent Observer",
      "properties": {
        "agentObserver.groupByProject": {
          "type": "boolean",
          "default": false,
          "description": "Group agents by project. When disabled, agents are shown as a flat list with the project name on each card."
        },
        "agentObserver.moveInactiveToTop": {
          "type": "boolean",
          "default": false,
          "description": "Move inactive agents to the top of the list, sorted by most recent status change."
        },
        "agentObserver.debugLogging": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable debug logging for agent plugin hooks. When enabled, hook invocations are logged to `~/.agent-observer/hook-debug.log`."
        }
      }
    }
  },
  "scripts": {
    "build": "node build.js",
    "test": "vitest run"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.0"
  }
}
